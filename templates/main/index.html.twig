{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    body{
        background-color: #0b8063;
        font-family: sans-serif;
        font-size: 20px;
        color: white;
    }
</style>

<div class="example-wrapper">
    <h1>Привет!</h1>
    <p>Это будущий новостной сайт.</p>
    {% if app.user %}
        <div class="mb-3">
            Вы вошли как {{ app.user.username }} <a href="{{ path('app_logout') }}">Выйти</a>
        </div>
    {% else %}
        <a href="{{ path('app_login') }}">Войти</a></br>
        <a href="{{ path('app_register') }}">Зарегистрироваться</a>
    {% endif %}
</div>
{% endblock %}
